{
    "plugins": ["jest", "@typescript-eslint", "github"],
    "extends": ["plugin:github/recommended", "plugin:github/typescript"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "import/no-namespace": "off"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    }
  }
